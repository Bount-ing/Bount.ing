{
  "info": {
    "name": "Open Bounties API",
    "description": "API collection for Open Bounties project.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\"username\":\"your_username\",\"password\":\"your_password\"}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{url}}/api/v1/login",
              "host": [
                "{{url}}"
              ],
              "path": [
                "api",
                "v1",
                "login"
              ]
            }
          }
        },
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\"username\":\"new_user\",\"email\":\"new_user@example.com\",\"password\":\"new_password\"}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{url}}/api/v1/register",
              "host": [
                "{{url}}"
              ],
              "path": [
                "api",
                "v1",
                "register"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "User Operations",
      "item": [
        {
          "name": "Get User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{url}}/api/v1/users/:id",
              "host": [
                "{{url}}"
              ],
              "path": [
                "api",
                "v1",
                "users",
                ":id"
              ]
            }
          }
        },
        {
          "name": "Update User",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"username\":\"updated_username\",\"email\":\"updated_email@example.com\"}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{url}}/api/v1/users/:id",
              "host": [
                "{{url}}"
              ],
              "path": [
                "api",
                "v1",
                "users",
                ":id"
              ]
            }
          }
        },
        {
          "name": "Delete User",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{url}}/api/v1/users/:id",
              "host": [
                "{{url}}"
              ],
              "path": [
                "api",
                "v1",
                "users",
                ":id"
              ]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "url",
      "value": "http://localhost:8080"
    },
    {
      "key": "access_token",
      "value": ""
    }
  ]
}

